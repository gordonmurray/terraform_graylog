{
    "builders": [{
      "type": "amazon-ebs",
      "profile": "{{user `profile`}}",
      "region": "{{user `region`}}",
      "source_ami": "{{user `base_ami_id`}}",
      "instance_type": "{{user `instance_type`}}",
      "force_deregister": "true",
      "force_delete_snapshot": "true",
      "ssh_username": "ubuntu",
      "ami_name": "elastic",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id" : "{{user `subnet_id`}}",
      "tags":
        {
          "Name": "elastic"
        }
    }],

    "provisioners": [
    {
        "type": "shell",
        "script": "files/apt.sh"
    },
    {
      "type": "shell",
      "script": "files/java.sh"
    },
    {
        "type": "shell",
        "script": "files/elastic.sh"
    },
    {
      "destination": "/home/ubuntu/elasticsearch.yml",
      "source": "files/elasticsearch.yml",
      "type": "file"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /home/ubuntu/elasticsearch.yml /etc/elasticsearch/elasticsearch.yml",
        "sudo systemctl restart elasticsearch"
      ]
    }
  ]
}